@model IT.Core.ViewModels.DriverViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<input type="hidden" value="@Model.Id" id="DriverId" />


<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="data-table-list">
                    <div class="basic-tb-hd">
                        <div class="row">
                            <div class="col-md-11">
                                <h2>Driver Details AW</h2>
                            </div>
                            <div class="col-md-1">
                                <button class="btn btn-primary btn-sm" id="createNewDriver"><i class="fa fa-plus"></i> New</button>
                            </div>
                        </div>

                    </div>
                    <div class="table-responsive">
                        <table id="MyTable" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>contact</th>
                                    <th>email</th>
                                    <th>UserName</th>
                                    <th>IsActive</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="ModelDeleteDriver" data-backdrop="static" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <h3>Are you sure ?</h3><br />
                <h5>You want to delete this record   <span id="spanId" class="badge badge-light">101</span></h5>
            </div>
            <hr />
            <div class="modal-footer">
                <button type="button" class="btn btn-info" id="DeleteDriver">Yes! Delete</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">No! Cancel</button>
            </div>
        </div>
    </div>
</div>

@Html.Partial("~/Areas/AWFDriver/Views/Shared/Partial/_DriverPartialView.cshtml")


@section Scripts{
    <script src="~/Areas/AWFDriver/Script/Driver.js"></script>
   
    <script src="~/Scripts/jquery.signalR-2.4.1.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Hubs/ScriptHub/AdminScript.js"></script>

    <script>

        $(document).ready(function () {

            BindDataTable();

            $('#createNewDriver').click(function () {
                $('#updateDriver').hide();
                $('#saveDriver').show();
                $('#DriverModel').modal('show');
            });


            $('input[id$=tbDate]').datepicker({});
            $('#DeleteDriver').click(function () {

                var Data = JSON.stringify({
                    Id: $('#spanId').text()
                });
                ajaxRequest("POST", "/AWFDriver-Delete", Data, "json").then(function (result) {
                    if (result == "Success") {

                        sucessDelete();

                        $('#MyTable').DataTable().ajax.reload();
                        $('#ModelDeleteDriver').modal('hide');
                    }
                    else {
                        $('#left-panel').html(result);
                    }
                });
            });


            $('#LicenseType').change(function () {
                console.log(LicenseTypes);
                var LicenseTypes = $('#LicenseType option:selected');
            });

        });

        var BindDataTable = function (response) {
            $('#MyTable').DataTable({
                "bRetrieve": true,
                "bServerSide": true,
                "processing": true,
                "sAjaxSource": "/AWFDriverAll",
                "fnServerData": function (sSource, aoData, fnCallback) {
                    $.ajax({
                        type: "Get",
                        data: aoData,
                        url: sSource,
                        success: fnCallback
                    })
                },

                "aoColumns": [
                    { "mData": "Name" },
                    { "mData": "Contact" },
                    { "mData": "Email" },
                    { "mData": "UserName" },
                    { "mData": "IsActive" },
                    {
                        "mData": "Id",
                        "render": function (Id, type, full, meta) {
                            return '<a href="#" onclick="Edit(' + Id + ')"><i class="glyphicon glyphicon-edit"></i></a>' + ' | ' + '<a href="#" onclick="View(' + Id + ')"><i class="glyphicon glyphicon-eye-open"></i></a>' + ' | ' + '<a href="#" onclick="Delete(' + Id + ')"><i class="glyphicon glyphicon-remove"></i></a>'
                        }
                    },
                ]
            })
        }


        function Delete(Id) {
            $('#spanId').text(Id);
            $('#ModelDeleteDriver').modal('show');
        }

    </script>

}