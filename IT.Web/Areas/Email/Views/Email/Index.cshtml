@model IT.Core.ViewModels.EmailFormModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-mail"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>Compose Email</h2>
                                    <p>Welcome to AWFuel <span class="bread-ntd"></span></p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-3">
                            <div class="breadcomb-report">
                                <button data-toggle="tooltip" data-placement="left" title="Download Report" class="btn"><i class="notika-icon notika-sent"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="view-mail-list sm-res-mg-t-30">
                    <div class="view-mail-hd">
                        <div class="view-mail-hrd">
                            @*<h2>New Message</h2>*@
                        </div>
                    </div>

                    <input type="hidden" value="@Model.LPOINvoiceId" name="LPOINvoiceId" />
                    <input type="hidden" value="@Model.FileName" name="FileName" />
                    <input type="hidden" value="@Model.FlagToRedirect" name="FlagToRedirect" id="FlagToRedirect" />

                    <div class="cmp-int mg-t-20">
                        <div class="row">
                            <div class="col-lg-1 col-md-2 col-sm-3 col-xs-12">
                                <div class="cmp-int-lb cmp-int-lb1 text-right">
                                    <span>Name: </span>
                                </div>
                            </div>
                            <div class="col-lg-11 col-md-10 col-sm-9 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st cmp-int-in cmp-email-over">
                                        @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.FromName)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-1 col-md-2 col-sm-3 col-xs-12">
                                <div class="cmp-int-lb cmp-int-lb1 text-right">
                                    <span>To: </span>
                                </div>
                            </div>
                            <div class="col-lg-11 col-md-10 col-sm-9 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st cmp-int-in cmp-email-over">
                                        @Html.TextBoxFor(m => m.ToEmail, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.ToEmail)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-1 col-md-2 col-sm-3 col-xs-12">
                                <div class="cmp-int-lb cmp-int-lb1 text-right">
                                    <span>Cc: </span>
                                </div>
                            </div>
                            <div class="col-lg-11 col-md-10 col-sm-9 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st cmp-int-in cmp-email-over">
                                        @Html.TextBoxFor(m => m.CC, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.CC)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-1 col-md-2 col-sm-3 col-xs-12">
                                <div class="cmp-int-lb cmp-int-lb1 text-right">
                                    <span>Message: </span>
                                </div>
                            </div>
                            <div class="col-lg-11 col-md-10 col-sm-9 col-xs-12">
                                <div class="form-group">
                                    <textarea type="text" rows="5" name="Message" class="form-control">If you require further information please don't hesitate to contact us.
 
Best regards,
AWFuel trading management.
                                    </textarea>
                                    @Html.ValidationMessageFor(m => m.Message)
                                </div>
                            </div>
                        </div>

                        <p></p>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-offset-1 col-md-10">
                                    <button type="submit" class="btn btn-info" value="Send">Send <i class="glyphicon glyphicon-circle-arrow-right"></i></button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


