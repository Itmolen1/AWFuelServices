@model IT.Core.ViewModels.DriverViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"> <i class="icon-align-justify"></i> </span>
                    <h5>Driver-info</h5>
                </div>
                <div class="widget-content nopadding">
                    <form action="/Driver/Driver/Create" method="post" class="form-horizontal" enctype="multipart/form-data">
                        <div class="row">
                            <div class="span6">
                                <div class="control-group">
                                    <label class="control-label">Driver Name :</label>
                                    <div class="controls">
                                        <input type="text" name="Name" class="span11" value="@Model.Name" placeholder="Driver Name" />
                                        @Html.ValidationMessageFor(Model => Model.Name)
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Phone Number</label>
                                    <div class="controls">
                                        <input type="text" name="Contact" class="span11" value="@Model.Contact" placeholder="Phone Number" />
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Email :</label>
                                    <div class="controls">
                                        <input type="text" name="Email" value="@Model.Email" class="span11" placeholder="Email" />
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label">License Type:</label>
                                    <div class="controls">
                                        <select name="LicenseType">
                                            <option class="text-light" value="1">Heavy</option>
                                            <option class="text-secondary" value="2">Light</option>
                                            <option>Other Please specify...</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label">License Expiry Date:</label>
                                    <div class="controls">
                                        @*@Html.EditorFor(model => model.LicenseExpiry, new { htmlAttributes = new { @class = "form-control datePick span11" } })*@
                                        <input type="text" id="DrivingLicenseExpiryDate" name="LicenseExpiry" value="12/12/2019" class="datePick span11" placeholder="Driving License Expiry Date" />
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label">Nationality:</label>
                                    <div class="controls">
                                        <select name="Nationality">
                                            <option value="AddNewProductSelect">Select Country...</option>
                                            @foreach (var country in ViewBag.CountryList)
                                            {
                                                <option value="@country.CountryName" @(country.CountryName == Model.Nationality ? "selected='selected'" : "")>@country.CountryName</option>
                                            }
                                        </select>

                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label">Facebook :</label>
                                    <div class="controls">
                                        <input type="text" name="Facebook" value="@Model.Facebook" class="span11" placeholder="Facebook" />
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label">Note:</label>
                                    <div class="controls">
                                        <textarea class="span11" name="Comments" value="@Model.Comments" placeholder="Special Note"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="span6">
                                <div class="control-group">
                                    <div class="control-group">
                                        <label class="control-label">Passport-Copy Front:</label>
                                        <div class="controls">
                                            <input type="file" name="files" id="file1" />
                                            <img style="width:30px;height:30px" />
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        <label class="control-label">Passport-Copy Back:</label>
                                        <div class="controls">
                                            <input type="file" name="files" id="file2" />
                                            <img style="width:30px;height:30px" />
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        <label class="control-label">Visa-Copy:</label>
                                        <div class="controls">
                                            <input type="file" name="files" id="file3" />
                                            <img style="width:30px;height:30px" />
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        <label class="control-label">UAE ID Front:</label>
                                        <div class="controls">
                                            <input type="file" name="files" id="file4" />
                                            <img style="width:30px;height:30px" />
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        <label class="control-label">UAE ID Back:</label>
                                        <div class="controls">
                                            <input type="file" name="files" id="file5" />
                                            <img style="width:30px;height:30px" />
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        <label class="control-label">Driving License Front:</label>
                                        <div class="controls">
                                            <input type="file" name="files" id="file6" />
                                            <img style="width:30px;height:30px" />
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        <label class="control-label">Driving License Back:</label>
                                        <div class="controls">
                                            <input type="file" name="files" id="file7" />
                                            <img style="width:30px;height:30px" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> Save</button>
                            <button type="reset" class="btn btn-info"><i class="glyphicon glyphicon-refresh"></i> Reset</button>
                            <button type="submit" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i> Cancel</button>
                        </div>
                    </form>
                </div>
            </div>

            <ul class="pager">
                <li class="previous"><a href="/Driver" title="List of Driver"><i class="glyphicon glyphicon-arrow-left"></i> Go to List</a></li>
                @*<li class="next"><a href="/Home" title="Home Page"><i class="glyphicon glyphicon-home"></i> Home</a></li>*@
            </ul>


        </div>
    </div>
</div>

