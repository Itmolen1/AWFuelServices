@model IT.Core.ViewModels.DesignationViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="span3"></div>
    <div class="row-fluid">
        <div class="span6">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"> <i class="icon-align-justify"></i> </span>
                    <h5>Designatin-info</h5>
                </div>
                <div class="widget-content nopadding">
                    <form action="/Designation/Designation/Create" method="Post" enctype="multipart/form-data" class="form-horizontal">
                        <div class="control-group">
                            <label class="control-label">Designation:</label>
                            <div class="controls">
                                <input type="text" name="Designation" id="Designation" class="span11" placeholder="Designation" value="@Model.Designation" />
                            </div>
                        </div>
                        <div class="form-actions">
                            <button type="submit" title="Save" class="btn btn-success"><i class="glyphicon glyphicon-save"></i> Save</button>
                            <button type="reset" title="Clear all stages" class="btn btn-info"><i class="glyphicon glyphicon-refresh"></i> Reset</button>
                            <button type="submit" title="Cancel to save" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i> Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

