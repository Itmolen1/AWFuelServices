@model IT.Core.ViewModels.ProjectViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">    
        <label>Project-Info:</label>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)


        <div class="row">
            <div class="col-md-4">
                Project Title:
                @Html.EditorFor(model => model.ProjectTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProjectTitle, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-8">
                Location:
                @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                Contact:
                @Html.EditorFor(model => model.Contact, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Contact, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                Email:
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

           

        <div class="row">
            <div class="col-md-6">
                Start Date:
                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                End Date:
                @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
            </div>
        </div>

          <div class="row">
              <div class="col-md-12">
                  Reason:
                  @*@Html.EditorFor(model => model.UpdatedReason, new { htmlAttributes = new { @class = "form-control" } })*@
                  @Html.TextArea("UpdatedReason", null, new { @class = "form-control" })

                  @Html.ValidationMessageFor(model => model.UpdatedReason, "", new { @class = "text-danger" })
              </div>
          </div>

        <hr />
            <div class="form-group">
                <div class="col-md-12">
                    @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-info" })          
                    <input type="submit" value="Update" class="btn btn-success" />
                </div>
            </div>
        </div>
