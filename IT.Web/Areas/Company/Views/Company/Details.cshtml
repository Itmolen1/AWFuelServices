            </div>
        </div>
    </div>
</div>


<hr />


@Html.Partial("~/Views/Shared/_PartialView/_EditImagePartialView.cshtml")

@section Scripts{

    <script>

        $(document).ready(function () {

            $('#DelImage').click(function () {

                var data = JSON.stringify({
                    ImagesUrl: $('#ImagesUrl').val(),
                    Id: $('#Id').val()
                })
                ajaxRequest("POST", "/Company/Company/DeleteImage", data, "JSON").then(function (result) {
                    if (result == 202) {
                        window.location.reload();
                        alert('Delete Success');
                        window.location.reload();
                    }
                    else {
                        $('#left-panel').html(result);
                    }
                });

            });
        });

    </script>
}
