@model IT.Core.ViewModels.CompanyViewModel

@{
    ViewBag.Title = "Details";

    if (Model.Id > 0)
    {
        Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    }

    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

