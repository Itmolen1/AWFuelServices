                                            </tr>
                                            <tr>
                                                <td>Email:</td>
                                                <td>@Model.Email</td>

                                            </tr>
                                            <tr>
                                                <td>City:</td>
                                                <td>@Model.City</td>
                                            </tr>
                                            <tr>
                                                <td>State:</td>
                                                <td>@Model.State</td>
                                            </tr>
                                            <tr>
                                                <td>Country:</td>
                                                <td>@Model.Country</td>
                                            </tr>
                                            <tr>
                                                <td>Address:</td>
                                                <td>@Model.Address</td>
                                            </tr>

                                            <tr>
                                                <td>Web:</td>
                                                <td>@Model.Web</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="widget-box">
                            <div class="widget-content">
                                @*<ul class="thumbnails">
                                        @{
                                            foreach (var k in ViewBag.Images)
