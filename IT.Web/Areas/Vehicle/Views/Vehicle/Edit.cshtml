@model IT.Core.ViewModels.VehicleViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container-fluid">

    <div class="span3"></div>
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"> <i class="icon-align-justify"></i> </span>
                    <h5>Driver-info</h5>
                </div>

                <div class="widget-content nopadding">

                    <form action="/Vehicle/Vehicle/Edit" method="Post" class="form-horizontal">
                        <input type="hidden" value="@Model.Id" name="Id" />
                        <div class="container">
                            <div class="row-fluid">

                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Vehicle Type:</label>
                                        <div class="controls">
                                            <select name="VehicleType">
                                                <option value="AddNewProductSelect">Select Vehicle Type...</option>
                                                @foreach (var pro in ViewBag.vehicleType)
                                                {
                                                    <option value="@pro.Id" @(pro.Id == Model.VehicleType ? "selected='selected'" : "")>@pro.VehicleType</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Color</label>
                                        <div class="controls">

                                            @Html.DropDownList("Color", new List<SelectListItem>
                                            {
                                                new SelectListItem { Text = "White", Value = "White"},
                                                new SelectListItem { Text = "Black", Value = "Black"},
                                                new SelectListItem { Text = "Green", Value = "Green"},
                                                new SelectListItem { Text = "Blue", Value = "Blue"},
                                                new SelectListItem { Text = "Black", Value = "Yallow"},
                                                new SelectListItem { Text = "Gold", Value = "Gold"}
                                            }, "Select Department")
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Trafic Plate Number</label>
                                        <div class="controls">
                                            <input type="text" name="TraficPlateNumber" id="TraficPlateNumber" value="@Model.TraficPlateNumber" class="span11" placeholder="Facebook" />
                                        </div>
                                    </div>
                                </div>

                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Mulkia Expiry</label>
                                        <div class="controls">
                                            <input type="text" id="MulkiaExpiry" name="MulkiaExpiry" value="@Model.MulkiaExpiry" class="datePick span11" placeholder="Insurance Expiry Date" />
                                        </div>
                                    </div>
                                </div>


                            </div>

                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">TC Number</label>
                                        <div class="controls">
                                            <input type="text" name="TCNumber" value="@Model.TCNumber" id="TCNumber" maxlength="10" class="span11" placeholder="Contact" />
                                        </div>
                                    </div>
                                </div>

                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Insurance Expiry</label>
                                        <div class="controls">
                                            <input type="text" id="InsuranceExpiry" name="InsuranceExpiry" value="@Model.InsuranceExpiry" class="datePick span11" placeholder="Mulkia Expiry Date" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">

                                        <label class="control-label">Model</label>
                                        <div class="controls">
                                            <input type="text" id="Model" name="Model" value="@Model.Model" class="span11" placeholder="Driving License Expiry Date" />
                                        </div>
                                    </div>
                                </div>

                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Insurance Company Name</label>
                                        <div class="controls">
                                            <input type="text" id="DrivingLicenseExpiryDate" name="LicenseExpiry" value="" class="datePick span11" placeholder="Insurance Company Name" />
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Brand</label>
                                        <div class="controls">
                                            <input type="text" name="Brand" value="@Model.Brand" id="Brand" class="span11" placeholder="Contact" />
                                        </div>
                                    </div>
                                </div>

                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Place of Registration</label>
                                        <div class="controls">
                                            @Html.DropDownList("RegisteredRegion", new List<SelectListItem>
                                           {
                                             new SelectListItem{ Text ="Abu Dhabi", Value="Abu Dhabi"},
                                             new SelectListItem{ Text ="Dubai", Value="Dubai"},
                                             new SelectListItem{ Text ="Sharja", Value="Sharja"},
                                             new SelectListItem{ Text ="Ajman", Value="Ajman"},
                                             new SelectListItem{ Text ="Fujairah", Value="Fujairah"},
                                             new SelectListItem{ Text ="Ras Al Khaimah", Value="Ras Al Khaimah"},
                                             new SelectListItem{ Text ="Umm Al Quwain", Value="Umm Al Quwain"},
                                           }, "Place of Registration")

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row-fluid">
                                <div class="span6"></div>
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Note</label>
                                        <div class="controls">
                                            <textarea class="span11" name="Comments" id="Comments" placeholder="Comments">@Model.Comments</textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-actions">
                                <button type="submit" title="Save" class="btn btn-default"><i class="glyphicon glyphicon-save"></i> Update</button>
                                <button type="reset" title="Clear all stages" class="btn btn-default"><i class="glyphicon glyphicon-refresh"></i> Reset</button>
                                <a href="/Home" type="submit" class="btn btn-default"><i class="glyphicon glyphicon-remove"></i> Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>

    </script>
}


