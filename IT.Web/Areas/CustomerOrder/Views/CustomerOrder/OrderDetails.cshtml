
@{
    ViewBag.Title = "OrderDetails";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}


<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="data-table-list">
                    <div class="basic-tb-hd">
                        <div class="row">
                            <div class="col-md-11">
                                <h2>Order Details</h2>
                            </div>
                            <div class="col-md-1">
                                <label class="text-info" id="Id"></label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                            <div class="table-responsive">
                                <table id="DeliverdTable" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <td colspan="2" style="text-align:center; font-weight:bold">Customer Detials</td>

                                        </tr>
                                        <tr>
                                            <td>Company</td>
                                            <td id="CompanyName"></td>
                                        </tr>
                                        <tr>
                                            <td>Create By</td>
                                            <td id="CreatedBy"></td>
                                        </tr>
                                        <tr>
                                            <td>Date</td>
                                            <td id="CreatedDate"></td>
                                        </tr>
                                        <tr>
                                            <td>Vehicle Number</td>
                                            <td id="CustomerVehicleNumber"></td>
                                        </tr>
                                        <tr>
                                            <td>Driver Name</td>
                                            <td id="CustomerDriverName"></td>
                                        </tr>
                                        <tr>
                                            <td>Time</td>
                                            <td id="CustomerOrderTime"></td>
                                        </tr>
                                        <tr>
                                            <td>Quantity</td>
                                            <td id="OrderQuantity">Order Date</td>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                            <div class="table-responsive">
                                <table id="DeliverdTable" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <td colspan="2" style="text-align:center; font-weight:bold">Deliver Detials</td>
                                        </tr>
                                        <tr>
                                            <td>Accept By</td>
                                            <td id="AcceptedBy"></td>
                                        </tr>
                                        <tr>
                                            <td>Date</td>
                                            <td id="DeliverdDate"></td>
                                        </tr>
                                        <tr>
                                            <td>Vehicle Plate Number</td>
                                            <td id="DeliverdVehicleNumber"></td>
                                        </tr>
                                        <tr>
                                            <td>Driver Name</td>
                                            <td id="DeliverdDriverName"></td>
                                        </tr>
                                        <tr>
                                            <td>Time</td>
                                            <td id="DeliverdOrderTime"></td>
                                        </tr>
                                        <tr>
                                            <td>Quantity</td>
                                            <td id="DeliverdOrderQuantity"></td>
                                        </tr>
                                        <tr>
                                            <td>Progress</td>
                                            <td><label class="label label-primary" id="OrderProgress"></label></td>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{

    <script>

        $(document).ready(function () {

            var Id = localStorage.getItem('OrderDetailsId');
            //localStorage.removeItem('OrderDetailsId');

            var Data = JSON.stringify({
                Id: Id
            })


            ajaxRequest("POST", "/OrderDetails", Data, "json").then(function (result) {

                $('#Id').text('# ' + result.Id);
                $('#CompanyName').text(result.CompanyName);
                $('#CreatedBy').text(result.CreatedBy);
                $('#CreatedDate').text(result.CreatedDate);
                $('#CustomerVehicleNumber').text(result.CustomerVehicleNumber);
                $('#CustomerDriverName').text(result.CustomerDriverName);
                $('#CustomerOrderTime').text(result.CustomerOrderTime);
                $('#OrderQuantity').text(result.OrderQuantity);
                $('#AcceptedBy').text(result.AcceptedBy);
                $('#DeliverdDate').text(result.DeliverdDate);
                $('#DeliverdVehicleNumber').text(result.DeliverdVehicleNumber);
                $('#DeliverdDriverName').text(result.DeliverdDriverName);
                $('#DeliverdOrderTime').text(result.DeliverdOrderTime);
                $('#DeliverdOrderQuantity').text(result.OrderQuantity);
                $('#OrderProgress').text(result.OrderProgress);
            });
        });
    </script>

}

