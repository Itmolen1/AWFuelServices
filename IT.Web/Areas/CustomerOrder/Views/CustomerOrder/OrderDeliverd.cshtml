
@{
    ViewBag.Title = "OrderDeliverd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="data-table-list">
                    <div class="basic-tb-hd">
                        <div class="row">
                            <div class="col-md-11">
                                <h2>Deliverd Order</h2>
                            </div>
                            <div class="col-md-1">
                                @*<button class="btn btn-primary btn-sm" id="createNewOrder"><i class="fa fa-plus"></i> New</button>*@
                            </div>
                        </div>

                    </div>
                    <div class="table-responsive">
                        <table id="DeliverdTable" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Order Id</th>
                                    <th>Order Date</th>
                                    <th>Accepted Date</th>
                                    <th>Company Name</th>
                                    <th>Accept By </th>
                                    <th>Progress</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/signalr/hubs"></script>
    <script>

        $(document).ready(function () {
            BindDataTable();
        });

        var BindDataTable = function (response) {
            $('#DeliverdTable').DataTable({
                "bRetrieve": true,
                "bServerSide": true,
                "processing": true,
                "sAjaxSource": "/GetDeliverdOrderAWFuel",
                "fnServerData": function (sSource, aoData, fnCallback) {
                    $.ajax({
                        type: "Get",
                        data: aoData,
                        url: sSource,
                        success: fnCallback
                    })
                },

                "aoColumns": [
                    { "mData": "Id" },
                    { "mData": "OrderDate" },
                    { "mData": "AcceptDate" },
                    { "mData": "CompanyName" },
                    { "mData": "UserName" },
                    { "mData": "OrderProgress" },
                    {
                        "mData": "Id",
                        "render": function (Id, type, full, meta) {
                            return '<a href="#" onclick="ViewOrder(' + Id + ')"><i class="glyphicon glyphicon-eye-open" title="View Order Details"></i></a>'
                        }
                    },
                ]
            })
        }

        function ViewOrder(Id) {
            localStorage.setItem('OrderDetailsId', Id);
            window.location.href = "/OrderDetails";
        }

    </script>

}


