@model IT.Core.ViewModels.EmployeeViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<input hidden id="EmployeeId" value="@Model.Id" />

<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="data-table-list">
                    <div class="basic-tb-hd">
                        <div class="row">
                            <div class="col-md-11">
                                <h2>Employee</h2>
                            </div>
                            <div class="col-md-1">
                                <button class="btn btn-primary btn-sm" id="createNewEmployee"><i class="fa fa-plus"></i> New</button>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table id="EmployeeTable" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Contact</th>
                                    <th>Email</th>
                                    <th>Position</th>
                                    <th>Basic Salary</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("~/Areas/Employee/Views/Shared/Partial/_EmployeePartialView.cshtml")

<div class="modal fade" id="ModelDeleteEmployee" data-backdrop="static" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <h3>Are you sure ?</h3><br />
                <h5>You want to delete this record   <span id="spanId" class="badge badge-light">101</span></h5>
            </div>
            <hr />
            <div class="modal-footer">
                <button type="button" class="btn btn-info" id="DeleteEmployee">Yes! Delete</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">No! Cancel</button>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>

        $(document).ready(function () {

            $('#createNewEmployee').click(function () {
                $('#updateEmployee').hide();
                $('#saveEmployee').show();
                $('#EmployeeModel').modal('show');
            });

            BindDataTable();

            $('#DeleteEmployee').click(function () {

                var Data = JSON.stringify({
                    Id: $('#spanId').text()
                });
                ajaxRequest("POST", "/Employee-Delete", Data, "json").then(function (result) {
                    if (result == "Success") {
                        sucessDelete();
                        $('#EmployeeTable').DataTable().ajax.reload();
                        $('#ModelDeleteEmployee').modal('hide');
                    }
                    else {
                        $('#left-panel').html(result);
                    }
                });
            });
        });

        var BindDataTable = function (response) {
            $('#EmployeeTable').DataTable({
                "bServerSide": true,
                "processing": true,
                "sAjaxSource": "/EmployeeAll",
                "fnServerData": function (sSource, aoData, fnCallback) {
                    $.ajax({
                        type: "Get",
                        data: aoData,
                        url: sSource,
                        success: fnCallback
                    })
                },

                "aoColumns": [
                    { "mData": "Name" },
                    { "mData": "Contact" },
                    { "mData": "Email" },
                    { "mData": "DesignationName" },
                    { "mData": "BasicSalary" },
                    {
                        "mData": "Id",
                        "render": function (Id, type, full, meta) {
                            return '<a href="#" onclick="Edit(' + Id + ')"><i class="glyphicon glyphicon-edit"></i></a>' + ' | ' + '<a href="#" onclick="View(' + Id + ')"><i class="glyphicon glyphicon-eye-open"></i></a>' + ' | ' + '<a href="#" onclick="Delete(' + Id + ')"><i class="glyphicon glyphicon-remove"></i></a>'
                        }
                    },
                ]
            })
        }


        function View(Id) {
            window.location.href = "/Employee-Details/" + Id
        }


        function Delete(Id) {
            $('#spanId').text(Id);
            $('#ModelDeleteEmployee').modal('show');
        }

    </script>
    <script src="~/Areas/Employee/Script/Employee.js"></script>

    <script src="~/Scripts/jquery.signalR-2.4.1.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Hubs/ScriptHub/CustomerScript.js"></script>

}

