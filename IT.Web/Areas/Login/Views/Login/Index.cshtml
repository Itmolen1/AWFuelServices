    <script>
            $(document).ready(function () {

                $('#Register').click(function () {

                    if (IsValidUser()) {

                        var Data = JSON.stringify({
                            FirstName: $('#FirstName').val(),
                            LastName: $('#LastName').val(),
                            UserName: $('#UserName').val(),
                            Password: $('#Password').val(),
                            ConfirmPassword: $('#ConfirmPassword').val()
                        })
                        ajaxRequest("POST", "/Login/Login/Register", Data, "json").then(function (result) {

                            if (result == "Success") {
                                alert('success');
                                window.location.reload();
                            }
                            else {
                                alert('Failed To Register');
                            }
                        });
                    }
                });
            });


            function IsValidUser() {
                var isValid = true;
                if ($('#FirstName').val() == "") {
                    $('#FirstName').css('border-color', 'Red');
                    isValid = false;
                }
                else {
                    $('#FirstName').css('border-color', 'lightgrey');
                }

                if ($('#LastName').val().trim() == "") {
                    $('#LastName').css('border-color', 'Red');
                    isValid = false;
                }
                else {
                    $('#LastName').css('border-color', 'lightgrey');
                }

                if ($('#UserName').val().trim() == "") {
                    $('#UserName').css('border-color', 'Red');
                    isValid = false;
                }
                else {
                    $('#UserName').css('border-color', 'lightgrey');
                }

                if ($('#Password').val().trim() == "") {
                    $('#Password').css('border-color', 'Red');
                    isValid = false;
                }
                else {
                    $('#Password').css('border-color', 'lightgrey');
                }

                if ($('#ConfirmPassword').val().trim() == "") {
                    $('#ConfirmPassword').css('border-color', 'Red');
                    isValid = false;
                }
                else {
                    $('#ConfirmPassword').css('border-color', 'lightgrey');
                }

                if ($('#Password').val() != $('#ConfirmPassword').val()) {
                    $('#Password').css('border-color', 'Red');
                    $('#ConfirmPassword').css('border-color', 'Red');
                    isValid = false;

                    $('#PasswordMatch').text('Password and confirm password must match');
                    $('#PasswordMatch').css('display', 'block').slideDown(1000);
                }
                else {
                    $('#Password').css('border-color', 'lightgrey');
                    $('#ConfirmPassword').css('border-color', 'Red');
                }

                return isValid;
            }
    </script>
