
<div class="modal fade" id="PurchaseModel" data-backdrop="static" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content" style="padding:40px">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label>LPO:</label>
                        <div class="chosen-select-act fm-cmp-mg">
                            <select name="VenderId" class="chosen" data-placeholder="Choose a Vender..." id="VenderId">
                                @foreach (var lpo in ViewBag.LPO)
                                {
                                    <option value="@lpo.Id">@lpo.PONumber</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="modal-footer">
                <button type="button" class="btn btn-warning pull-left" id="CreatePurchaseDirect">Direct Purchase</button>
                <button type="button" class="btn btn-info" id="CreatePurchase">Create Purchase From LPO</button>
            </div>
        </div>
    </div>
</div>
